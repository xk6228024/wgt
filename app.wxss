/* -----------------------盒子布局------------------------ */

/* 通用 盒子横向布局 */

.common_v_row {
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
}

/* 通用 盒子竖向布局 */

.common_v_column {
  width: 100%;
  display: flex;
  flex-direction: column;
  background: #fff;
}

/* 通用布局 100rpx高度*/

.common_v_between100 {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  /* border-bottom: solid 1rpx #000; */
}

/* 通用靠左布局*/

.common_v_start {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

/* 通用靠右布局 */

.common_v_end {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

/* -----------------------模块化样式------------------------ */

/* ----上传图片部分样式---- */
.common_v_upload {
  height: 120rpx;
  width: 100%;
  display: flex;
  padding-bottom: 24rpx;
}

.common_v_upload_block {
  display: inline-block;
  position: relative;
  margin-right: 32rpx;
}

.common_iv_del {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: -22rpx;
  right: -22rpx;
  z-index: 888;
}

/*  ----单元格显示样式===cells样式---- */

/* 通用 盒子横向布局 100高度*/
.common_v_row100h {
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  background: #fff;
  align-items: center;
}

/* 通用 盒子横向布局 72高度*/
.common_v_row72h {
  width: 100%;
  height: 72rpx;
  display: flex;
  flex-direction: row;
  background: #fff;
  align-items: center;
}

/* 通用 靠左的文字 180宽度*/
.common_tv_left180w {
  width: 180rpx;
  float: left;
  font-size: 28rpx;
  color: #666;
  height: 52rpx;
  line-height: 52rpx;
  overflow: hidden;
  margin-left: 32rpx;
}

/* 通用 中部的文字 单行显示缩略 */

.common_tv_center {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  height: 52rpx;
  line-height: 52rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin: 0 16rpx;
}

/* 通用 靠右的文字 */

.common_tv_right {
  float: right;
  font-size: 28rpx;
  color: #666;
  height: 52rpx;
  line-height: 52rpx;
  overflow: hidden;
  margin-right: 32rpx;
}

/* 通用 靠右的图片 */

.common_iv_right {
  width: 44rpx;
  height: 44rpx;
  float: right;
  overflow: hidden;
  margin-right: 32rpx;
}

