/* components/loading/loading.wxss */

.cover {
  transition: 0.5s all ease-in;
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 100%;
  z-index: 9999;
  /* background: rgba(255, 255, 255, 0); */
}
.box {
  background: rgba(0, 0, 0, 0.6);
  width: 240rpx;
  height: 240rpx;
  position: absolute;
  top: 50%;
  transform: translateX(-50%) translateY(-50%);
  left: 50%;
  /* transform: translateY(-50%); */
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.imageload {
  width: 100rpx;
  height: 100rpx;
}