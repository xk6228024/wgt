.v_bg {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.v_main {
  width: 586rpx;
  height: 360rpx;
  background: #fff;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  margin-bottom: 128rpx;
}

.v_title {
  height: 40rpx;
  font-size: 28rpx;
  color: #185bbd;
  line-height: 40rpx;
  margin: 25rpx 0;
}

.v_line {
  width: 526rpx;
  height: 2rpx;
  background: #185bbd;
}

.v_content {
  width: 224rpx;
  height: 45rpx;
  font-size: 32rpx;
  color: #404d66;
  line-height: 45rpx;
  margin-top: 55rpx;
}

.v_submit_row {
  width: 100%;
  height: 105rpx;
  border-top: solid 1rpx #f5f5f5;
  position: absolute;
  margin-top: 253rpx;
  display: flex;
  flex-direction: row;
}

.v_line_coulonm {
  width: 2rpx;
  height: 105rpx;
  background: #f5f5f5;
}

.v_submit_cancel {
  width: 50%;
  height: 105rpx;
  font-size: 32rpx;
  color: #868686;
  line-height: 105rpx;
  text-align: center;
}

.v_submit_confirm {
  width: 50%;
  height: 105rpx;
  font-size: 32rpx;
  color: #404d66;
  line-height: 105rpx;
  text-align: center;
}
