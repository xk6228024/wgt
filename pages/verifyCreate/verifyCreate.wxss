/* 选择栏 样式 */

.v_select {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #fff;
}

.v_select_tips {
  width: 33.3%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.v_picker {
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

