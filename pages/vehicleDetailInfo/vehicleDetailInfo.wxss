/* pages/vehicleDetailInfo/vehicleDetailInfo.wxss */
page{
  background: #F5F5F5;
}

.v_vehicleInfoBg{
  display: flex;
  flex-direction: column;
}

.v_sectionHeader{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  align-items: center;
  background: white;
}

.tv_titleFont{
  font-size: 32rpx;
  color: #404d66;
  height: 52rpx;
  line-height: 52rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
} 

.tv_leftTitle {
  flex-shrink: 0;
  margin-left: 30rpx;
}

.tv_row {
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.tv_subTitleFont{
  font-size: 32rpx;
  color: #868686;
  height: 52rpx;
  line-height: 52rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
} 

.tv_tv_subTitleRight{
  margin-left: 30rpx;
  margin-right: 30rpx;
  text-align: right;
}

.tv_bold{
  font-weight: bold;
}

.iv_arrow{
  margin-right: 30rpx;
  width: 14rpx;
  height: 26rpx;
  flex-shrink: 0;
}

.v_line{
  margin-left: 30rpx;
  margin-right: 0;
  height: 1rpx;
  background: #f5f5f5;
}
