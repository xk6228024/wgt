<!-- 设备 -->
<view class="v_base" wx:if='{{currentIndex==3}}'>
  <!-- 专用设备 -->
  <view>
    <view class="common_v_between100" bindtap="specialized">
      <view class="common_tv_tips32">专用设备</view>
      <image wx:if="{{specializedOpen}}" class='common_iv_up' mode='scaleToFill' src='{{icon_arrow_up_gray}}'></image>
      <image wx:if="{{!specializedOpen}}" class='common_iv_next' mode='scaleToFill' src='{{icon_arrow_next_gray}}'></image>
    </view>

    <view class="common_v_line720"></view>

    <view wx:if="{{specializedOpen}}">
      <view class="common_v_between100_gray" bindtap='toJumpS' data-jumpway='../verifyEnterpriseUpload/verifyEnterpriseUpload' data-name='经营场地' data-item='接待室'>
        <view class="common_tv_tips30_gray">费油收集设备</view>
        <image class='common_iv_next' mode='scaleToFill' src='{{icon_arrow_next_gray}}'></image>
      </view>

      <view class="common_v_line720"></view>

      <view class="common_v_between100_gray" bindtap='toJumpS' data-jumpway='../verifyEnterpriseUpload/verifyEnterpriseUpload'>
        <view class="common_tv_tips30_gray">费油输送设备</view>
        <image class='common_iv_next' mode='scaleToFill' src='{{icon_arrow_next_gray}}'></image>
      </view>
    </view>
  </view>

  <!-- 检测设备 -->
  <view>
    <view class="common_v_between100" bindtap="detection">
      <view class="common_tv_tips32">检测设备</view>
      <image wx:if="{{detectionOpen}}" class='common_iv_up' mode='scaleToFill' src='{{icon_arrow_up_gray}}'></image>
      <image wx:if="{{!detectionOpen}}" class='common_iv_next' mode='scaleToFill' src='{{icon_arrow_next_gray}}'></image>
    </view>

    <view class="common_v_line720"></view>

    <view wx:if="{{detectionOpen}}">
      <view class="common_v_between100_gray" bindtap='toJumpS' data-jumpway='../verifyEnterpriseUpload/verifyEnterpriseUpload' data-name='设施设备' data-item='万用表'>
        <view class="common_tv_tips30_gray">汽车前照灯检测设备</view>
        <image class='common_iv_next' mode='scaleToFill' src='{{icon_arrow_next_gray}}'></image>
      </view>

      <view class="common_v_line720"></view>

      <view class="common_v_between100_gray" bindtap='toJumpS' data-jumpway='../verifyEnterpriseUpload/verifyEnterpriseUpload'>
        <view class="common_tv_tips30_gray">侧滑试验台</view>
        <image class='common_iv_next' mode='scaleToFill' src='{{icon_arrow_next_gray}}'></image>
      </view>
    </view>
  </view>

  <!-- 通用设备 -->
  <view>
    <view class="common_v_between100" bindtap="universal">
      <view class="common_tv_tips32">通用设备</view>
      <image wx:if="{{universalOpen}}" class='common_iv_up' mode='scaleToFill' src='{{icon_arrow_up_gray}}'></image>
      <image wx:if="{{!universalOpen}}" class='common_iv_next' mode='scaleToFill' src='{{icon_arrow_next_gray}}'></image>
    </view>

    <view class="common_v_line720"></view>

    <view wx:if="{{universalOpen}}">
      <view class="common_v_between100_gray" bindtap='toJumpS' data-jumpway='../verifyEnterpriseUpload/verifyEnterpriseUpload'>
        <view class="common_tv_tips30_gray">费油收集设备</view>
        <image class='common_iv_next' mode='scaleToFill' src='{{icon_arrow_next_gray}}'></image>
      </view>

      <view class="common_v_line720"></view>

      <view class="common_v_between100_gray" bindtap='toJumpS' data-jumpway='../verifyEnterpriseUpload/verifyEnterpriseUpload'>
        <view class="common_tv_tips30_gray">费油收集设备</view>
        <image class='common_iv_next' mode='scaleToFill' src='{{icon_arrow_next_gray}}'></image>
      </view>
    </view>
  </view>


</view>