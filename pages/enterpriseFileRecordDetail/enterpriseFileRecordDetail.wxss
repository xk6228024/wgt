page {
  background: #f5f5f5;
}

/* 企业信息 */

.v_list_info {
  width: 100%;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.iv_location {
  width: 28rpx;
  height: 36rpx;
  margin-left: 30rpx;
}

.tv_location {
  width: 650rpx;
  font-size: 26rpx;
  color: rgba(64, 77, 102, 1);
  line-height: 37rpx;
  margin-left: 20rpx;
}

.tv_record_info {
  font-size: 32rpx;
  color: #404d66;
  margin-left: 30rpx;
  margin-right: 15rpx;
}

/* tabs部分 */

.v_tabs {
  width: 100%;
  height: 80rpx;
  overflow: hidden;
  background: #fff;
  border-bottom: solid 1rpx #f5f5f5;
}

.v_tabs_colunm {
  height: inherit;
  float: left;
  width: 33.3%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.v_tabs_items {
  font-size: 30rpx;
  color: #404d66;
  margin-top: 20rpx;
}

.v_tabs_items.active {
  font-size: 30rpx;
  color: #185bbd;
  font-weight: bold;
  margin-top: 20rpx;
}

.tabs_line {
  width: 40rpx;
  height: 6rpx;
  background: #185bbd;
  border-radius: 4rpx;
  margin-top: 15rpx;
}

/* 各种信息 */

.v_base {
  background: #fff;
}
