  flex-direction: column;
  background: #F5F5F5;
  align-items: center;
}

.v_cell138rpx {
  width: 100%;
  height: 138rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.iv_size{
  width: 118rpx;
  height: 118rpx;
}

