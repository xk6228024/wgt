<!--pages/vehicleFiles/vehicleFiles.wxml-->

<!-- 搜索 -->
<view class="v_bgColor common_v_search">
  <view class="common_v_search_bg">
    <image class='common_mar_search common_iv30' mode='scaleToFill' src='{{icon_search}}'></image>
    <input bindinput='searchInput' placeholder="请输入企业名称查询" placeholder-class="placeholderStyle" maxlength='18' value="{{searchKey}}" />
  </view>
</view>

<block wx:for = "{{dataSource}}">
  <view class="common_v_line20"></view>
  <view class="v_cell" bindtap="cellTapEvent" data-vehicleid = "{{item}}">
    <view class="v_carInfo">
      <view class="v_carPlate">
        <text class='tv_plate {{item.vehicleTechnicalRecordLicensePlateColor != "白色"?"plateFontWhite":"plateFontBlack"}}'>{{item.vehicleTechnicalRecordLicensePlate}}
        </text>
        <image class="iv_plate" mode='scaleToFill' src='{{plateBgImage[item.vehicleTechnicalRecordLicensePlateColor]}}'></image>
      </view>
      <text class="tv_middle">{{item.vehicleTransportCertificateBusinessname}}</text>
      <text class="tv_right">{{item.vehicleTransportCertificateBusinessname}}</text>
    </view>

    <view class="common_v_line720"></view>

    <view class="v_carBrand">
      <view class="v_brandBg">
        <image class="iv_brand" mode='scaleToFill' src='{{item.vehicleTechnicalRecordPicUrl}}'></image>
        <text class="tv_left">{{item.vehicleTransportCertificateBusinessname}}</text>
      </view>
      <text class="tv_right">{{item.vehicleTypeName}}</text>
    </view>
  </view>
</block>
